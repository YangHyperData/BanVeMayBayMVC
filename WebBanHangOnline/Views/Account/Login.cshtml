@using WebBanHangOnline.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">


    <section class="bg0 p-t-104 p-b-116">
        <div class="container">
            <div class="flex-c flex-tr">
                <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                    @using (Html.BeginForm("Login", "Account"))
                    {
                        @Html.AntiForgeryToken()
                        <h4 class="mtext-105 cl2 txt-center p-b-30">
                            Login In YangStoneAirLine
                        </h4>
                        <h6 class="text-center text-danger">
                            @TempData["err1"]
                        </h6>
                        <div class="bor8 m-b-20 how-pos4-parent">

                            @*<img class="how-pos4 pointer-none" src="~/Asset/images/icons/icon-email.png" alt="ICON">*@
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })

                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>

                        <div class="bor8 m-b-20 how-pos4-parent ">

                            @*<img class="how-pos4 pointer-none" src="~/Asset/images/icons/icons8-key-security-25.png" alt="ICON">*@
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>


                        <input class="flex-c-m stext-101 cl0 size-121 bg3  hov-btn3 p-lr-15 trans-04 pointer"
                               type="submit" value="Login" />

                    }


                    <div class="mt-3">
                        <a class="flex-c-m stext-101 cl0 size-121 bg3  hov-btn3 p-lr-15 trans-04 pointer"
                           href="@Url.Action("Register","Account")">Register</a>
                    </div>
                </div>


            </div>
        </div>
    </section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}